<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    tools:context="com.example.saurabhuttam.sunshine.fragments.OneFragment">


   <LinearLayout
       android:layout_marginTop="20dp"
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:layout_weight="4"
       android:orientation="horizontal">
       <LinearLayout
           android:layout_width="0dp"
           android:layout_weight="1"
           android:layout_height="match_parent"
           android:orientation="vertical"
           >

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="0dp"
               android:layout_weight="3"
               android:orientation="horizontal">
               <TextView
                   android:layout_width="0dp"
                   android:layout_weight="4"
                   android:layout_height="match_parent"
                   android:textAppearance="?android:attr/textAppearanceLarge"
                   android:text="000"
                   android:id="@+id/tempTV"
                   android:textSize="60sp"
                   android:fontFamily="sans-serif-condensed"
                   android:gravity="bottom|right"/>
               <TextView
                   android:layout_width="0dp"
                   android:layout_weight="2"
                   android:layout_height="match_parent"
                   android:gravity="bottom|left"
                   android:textSize="40sp"
                   android:paddingBottom="10dp"
                   android:text="\u00B0C"

                   />
           </LinearLayout>
           <TextView
               android:layout_width="match_parent"
               android:layout_height="0dp"
               android:layout_weight="1"
               android:text="City|Country"
               android:id="@+id/cityTV"
               android:paddingTop="0dp"
               android:gravity="center_horizontal"/>


       </LinearLayout>
       <LinearLayout
           android:layout_width="0dp"
           android:layout_weight="1"
           android:layout_height="match_parent"
           android:gravity="center"
           android:paddingBottom="30dp"
           android:orientation="vertical">
           <TextView
               android:layout_width="match_parent"
               android:layout_height="0dp"
               android:layout_weight="4"
               android:textSize="100sp"
               android:text="&#xf01a;"
               android:textColor="#000"
               android:id="@+id/conditionIV"
               android:gravity="center_horizontal|bottom"/>
           <TextView
               android:layout_width="match_parent"
               android:layout_height="0dp"
               android:layout_weight="1"
               android:text="Condition"
               android:id="@+id/condtion"
               android:gravity="center_horizontal|top"/>

       </LinearLayout>



   </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="1">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:text="&#xf07a;"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textSize="20sp"
                        android:id="@+id/humidityIV"/>
                    <TextView
                        android:gravity="left|center_vertical"
                        android:paddingLeft="10dp"
                        android:layout_width="0dp"
                        android:layout_weight="4"
                        android:textSize="16sp"
                        android:layout_height="match_parent"
                        android:text="Humidity"
                        android:textStyle="bold"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:text="&#xf021;"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textSize="20sp"
                        android:id="@+id/windSpeedIV"/>
                    <TextView
                        android:gravity="left|center_vertical"
                        android:paddingLeft="10dp"
                        android:layout_width="0dp"
                        android:layout_weight="4"
                        android:textSize="16sp"
                        android:layout_height="match_parent"
                        android:text="Wind Speed"
                        android:textStyle="bold"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:text="&#xf051;"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textSize="20sp"
                        android:id="@+id/sunriseIV"/>
                    <TextView
                        android:gravity="left|center_vertical"
                        android:paddingLeft="10dp"
                        android:layout_width="0dp"
                        android:layout_weight="4"
                        android:layout_height="match_parent"
                        android:text="Sunrise"
                        android:textSize="16sp"
                        android:textStyle="bold"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:text="&#xf052;"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textSize="20sp"
                        android:id="@+id/sunsetIV"/>
                    <TextView
                        android:gravity="left|center_vertical"
                        android:paddingLeft="10dp"
                        android:layout_width="0dp"
                        android:layout_weight="4"
                        android:layout_height="match_parent"
                        android:text="Sunset"
                        android:textSize="16sp"
                        android:textStyle="bold"/>
                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:gravity="left|center_vertical"

                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="55%"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:id="@+id/humidityTV"/>
                <TextView
                    android:gravity="left|center_vertical"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="5 m/s"
                    android:textSize="16sp"
                    android:id="@+id/windSpeedTV"/>
                <TextView
                    android:gravity="left|center_vertical"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="5 AM"
                    android:textSize="16sp"
                    android:id="@+id/sunriseTV"
                    android:textAllCaps="true" />
                <TextView
                    android:gravity="left|center_vertical"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="6 AM"
                    android:textSize="16sp"
                    android:id="@+id/sunsetTV"
                    android:textAllCaps="true" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Min-Temp"
                    android:textSize="16sp"
                    android:gravity="bottom|center_horizontal"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:text="00\u00B0C"
                    android:textSize="40sp"
                    android:gravity="center_horizontal|top"
                    android:id="@+id/minTempTV"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Max-Temp"
                    android:textSize="16sp"
                    android:gravity="bottom|center_horizontal"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:text="00\u00B0C"
                    android:textSize="40sp"
                    android:gravity="center_horizontal|top"
                    android:id="@+id/maxTempTV"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/horizontalScrollView" >

        </HorizontalScrollView>
    </LinearLayout>


</LinearLayout>